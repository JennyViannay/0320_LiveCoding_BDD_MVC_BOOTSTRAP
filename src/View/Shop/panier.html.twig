{% extends 'layout.html.twig' %}

{% block content %}
<div class="container">
    <div class="my-5"></div>
    <div class="jumbotron bg-dark text-white" style="border: 1px #000 solid;">
        <div class="row">
            <div class="col-12">
                <h3 class="display-4">
                    <img src="https://i.pinimg.com/originals/e9/ba/ba/e9baba516072d55875bade8fadf8cd09.gif" alt="" style="width : 100px; height: 100px; border-radius: 50%;">
                    Confirm Order !
                </h3>
            </div>
        </div>
        <div class="row mt-5">
            <table class="table table-light bg-light panier-table text-center">
                <thead>
                    <tr>
                    <th scope="col">id</th>
                    <th scope="col">name</th>
                    <th scope="col">qty</th>
                    <th scope="col">price</th>
                    <th scope="col">action</th>
                    <th scope="col">total</th>
                    </tr>
                </thead>
                <tbody>
                {% for item in panier %}
                    <tr>
                        <td>{{item.id}}</td>
                        <td>{{item.name}}</td>
                        <td>
                            <select class="custom-select custom-select-sm" name="qty" style="width:50px"> 
                                    <option selected value="{{item.qty}}">{{item.qty}}</option>
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                            </select>
                        </td>
                        <td>{{item.price}} €</td>
                        <td><button type="button" class="btn btn-light"><i class="fas fa-trash"></i></button></td>
                        <td>{{item.total}} €</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="col-12 text-right mt-2 p-3">
            <p class="total-table ">
                ## TOTAL : <span id="total">{{ total }}</span> €
                <a href="/home/success" class="btn btn-lg btn-primary">Pay <i class="fas fa-comment-dollar"></i></a>
            </p>
        </div>
    </div>
</div>
{% endblock %}
